@model Gestion_de_la_flotte.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Register.css">
</head>
<body>
    <header>
        <!-- Contenu de l'en-tête -->
    </header>

    <div class="bg-image"></div>

    <div class="container-fluid register-container">
        <div class="register-form text-center">
            <h1 class="mb-4">Inscription sur Fleet Management</h1>
            <form asp-action="Register" id="register-form" method="post">
                <div class="form-group position-relative">
                    <label for="email" class="sr-only">Email:</label>
                    <i class="fas fa-envelope position-absolute" style="top: 50%; left: 15px; transform: translateY(-50%);"></i>
                    <input asp-for="Email" class="form-control pl-5" placeholder="Entrez votre email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label for="password" class="sr-only">Mot de passe:</label>
                    <i class="fas fa-lock position-absolute" style="top: 50%; left: 15px; transform: translateY(-50%);"></i>
                    <input asp-for="Password" class="form-control pl-5" placeholder="Entrez votre mot de passe" />
                    <i class="fas fa-eye position-absolute toggle-password" data-target="#Password" style="top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer;"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group position-relative">
                    <label for="confirmPassword" class="sr-only">Confirmer le mot de passe:</label>
                    <i class="fas fa-lock position-absolute" style="top: 50%; left: 15px; transform: translateY(-50%);"></i>
                    <input asp-for="ConfirmPassword" class="form-control pl-5" placeholder="Confirmez votre mot de passe" />
                    <i class="fas fa-eye position-absolute toggle-password" data-target="#ConfirmPassword" style="top: 50%; right: 15px; transform: translateY(-50%); cursor: pointer;"></i>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <!-- HTML de la page d'inscription -->
                <button type="submit" class="btn btn-primary btn-block" id="submit-button">
                    <span id="submit-text">S'inscrire</span>
                </button>

            </form>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/Register.js"></script>
</body>
</html>
