        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AdminUserManagement","Admin")">Gestion des Utilisateurs</a>
