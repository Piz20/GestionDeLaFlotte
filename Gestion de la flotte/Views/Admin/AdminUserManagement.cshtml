    <!-- Main Content -->
    <div class="container my-5">
        <h1 class="mb-4 text-danger text-center">Gestion des Utilisateurs</h1>

        <!-- Loader -->
        <div id="page-loader" class="d-none text-center fixed-top" style="top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 9999;">
            <div class="spinner-border text-danger" role="status">
                <span class="visually-hidden">Chargement...</span>
            </div>
            <p class="mt-2">Chargement...</p>
        </div>

        <div id="error" class="alert alert-danger d-none" role="alert"></div>

        <a href="@Url.Action("AdminAddFleetUser","Admin")" class="btn btn-primary mb-4">Ajouter un Nouvel Utilisateur</a>

        <!-- User List Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h2 class="mb-0">Liste des Utilisateurs</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="userTable" class="table table-striped table-bordered nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>CNI</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Utilisateurs Test -->
                            <tr>
                                <td>Dupont</td>
                                <td>Jean</td>
                                <td>1234567890</td>
                                <td>jean.dupont@example.com</td>
                                <td>Actif</td>
                                <td>
                                    <button class="btn btn-warning btn-sm">Modifier</button>
                                    <button class="btn btn-danger btn-sm">Supprimer</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Martin</td>
                                <td>Sophie</td>
                                <td>0987654321</td>
                                <td>sophie.martin@example.com</td>
                                <td>Inactif</td>
                                <td>
                                    <button class="btn btn-warning btn-sm">Modifier</button>
                                    <button class="btn btn-danger btn-sm">Supprimer</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Durand</td>
                                <td>Marc</td>
                                <td>1122334455</td>
                                <td>marc.durand@example.com</td>
                                <td>Actif</td>
                                <td>
                                    <div class="d-flex">
                                        <button class="btn btn-warning btn-sm me-2">Modifier</button>
                                        <button class="btn btn-danger btn-sm">Supprimer</button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>Leclerc</td>
                                <td>Julie</td>
                                <td>5566778899</td>
                                <td>julie.leclerc@example.com</td>
                                <td>Actif</td>
                                <td>
                                    <button class="btn btn-warning btn-sm">Modifier</button>
                                    <button class="btn btn-danger btn-sm">Supprimer</button>
                                </td>
                            </tr>
                        </tbody>
                       
                    </table>
                </div>
            </div>
        </div>

        <!-- Edit User Form Card -->
        <div id="editUserForm" class="card mb-4 edit-user-form d-none">
            <div class="card-header">
                <h2 class="mb-0">Modifier Utilisateur</h2>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="editUserName" class="form-label">Nom:</label>
                        <input id="editUserName" type="text" class="form-control" placeholder="Nom" aria-label="Nom">
                    </div>
                    <div class="mb-3">
                        <label for="editUserPrenom" class="form-label">Prénom:</label>
                        <input id="editUserPrenom" type="text" class="form-control" placeholder="Prénom" aria-label="Prénom">
                    </div>
                    <div class="mb-3">
                        <label for="editUserCni" class="form-label">CNI:</label>
                        <input id="editUserCni" type="text" class="form-control" placeholder="CNI" aria-label="CNI">
                    </div>
                    <div class="mb-3">
                        <label for="editUserEmail" class="form-label">Email:</label>
                        <input id="editUserEmail" type="email" class="form-control" placeholder="Email" aria-label="Email">
                    </div>
                    <div class="mb-3">
                        <label for="editUserStatus" class="form-label">Status:</label>
                        <input id="editUserStatus" type="text" class="form-control" placeholder="Status" aria-label="Status">
                    </div>
                    <button id="updateUserButton" type="button" class="btn btn-success">Mettre à jour</button>
                </form>
            </div>
        </div>

        <!-- Email Form Card -->
        <div id="emailForm" class="card mb-4 email-form d-none">
            <div class="card-header">
                <h2 class="mb-0">Envoyer un Email à <span id="selectedUserName"></span></h2>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-3">
                        <label for="emailMessage" class="form-label">Message:</label>
                        <textarea id="emailMessage" class="form-control" rows="4" placeholder="Tapez votre message ici" aria-label="Message"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="emailAttachments" class="form-label">Pièces Jointes:</label>
                        <input id="emailAttachments" type="file" multiple class="form-control" aria-label="Pièces jointes">
                    </div>
                    <button id="sendEmailButton" type="button" class="btn btn-success">Envoyer Email</button>
                </form>
            </div>
        </div>
    </div>
