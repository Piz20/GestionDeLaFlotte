@model Gestion_de_la_flotte.Models.FleetUser

<form id="editUserForm" asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-4">
                <label asp-for="Matricule" class="form-label"></label>
                <input asp-for="Matricule" class="form-control" placeholder="Entrer le matricule de l'utilisateur" />
                <span asp-validation-for="Matricule" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Entrer le nom" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-4">
                <label asp-for="SurName" class="form-label"></label>
                <input asp-for="SurName" class="form-control" placeholder="Entrer le prénom" />
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-4">
                <label asp-for="CNINumber" class="form-label"></label>
                <input asp-for="CNINumber" class="form-control" placeholder="Entrer le numéro de CNI" />
                <span asp-validation-for="CNINumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Entrer l'email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-danger btn-block btn-lg">Modifier l'utilisateur</button>
    </div>
</form>
